{
  "title": "Chimera V1 Core Metrics",
  "panels": [
    {
      "type": "stat",
      "title": "Queue Length (AI)",
      "targets": [
        {
          "expr": "chimera_celery_queue_length{queue=\"ai\"}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Queue Length (Matches)",
      "targets": [
        { "expr": "chimera_celery_queue_length{queue=\"matches\"}", "refId": "A" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "graph",
      "title": "/analyze E2E Latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(chimera_analyze_e2e_latency_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "type": "graph",
      "title": "Stage Durations (avg)",
      "targets": [
        { "expr": "sum(rate(chimera_stage_duration_seconds_sum[5m])) by (stage) / sum(rate(chimera_stage_duration_seconds_count[5m])) by (stage)", "refId": "A" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "legend": { "show": true }
    },
    {
      "type": "graph",
      "title": "Riot 429 Rate",
      "targets": [
        { "expr": "rate(chimera_riot_api_429_total[5m])", "refId": "A" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },
    {
      "type": "graph",
      "title": "LLM Outcomes",
      "targets": [
        { "expr": "sum by (status) (increase(chimera_llm_requests_total[1h]))", "refId": "A" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "legend": { "show": true }
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
